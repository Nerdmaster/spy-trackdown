{% extends "layout.html.twig" %}

{% block header %}
  <b>{{player_name}}</b>
{% endblock %}

{% block content %}
  <div class="panel panel-primary">
    <div class="panel-heading">
      Turn #{{turn}}, {{action_ordinal}} action
    </div>
    <div class="panel-body player-location">
      {{zone.region}} - {{zone.location_number}} ({{zone.city_name}})
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
      <div id="phone" class="well">
        <div class="panel panel-default">
          <div id="phone-display" class="panel-body text-center" data-command="">
            _
          </div>
        </div>

        <div class="phone-button command">
          <button data-value="O" class="btn btn-default">O</button>
        </div>

        <div class="phone-button command">
          <button data-value="X" class="btn btn-default">X</button>
        </div>

        <div class="phone-button reset">
          <button class="btn btn-danger">Reset</button>
        </div>
      </div>
    </div>

    <div class="col-md-8">
      <div class="recent-history">
        In here we'll show public history with a button to pop up private history
      </div>
    </div>
  </div>

  <div class="modal fade" id="confirm-command" tabindex="-1" role="dialog" aria-labelledby="confirm-command-label" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 id="confirm-command-label" class="modal-title"></h4>
        </div>
        <div class="modal-body"></div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-primary">Confirm Action</button>
        </div>
      </div>
    </div>
  </div>

{% endblock %}
